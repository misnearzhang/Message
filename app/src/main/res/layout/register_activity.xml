<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/parent_layout"
    android:background="@color/grayrare">


    <LinearLayout
        android:id="@+id/topblack"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="用户注册"
            android:textSize="40sp"
            android:textColor="#aaa"
            android:background="@drawable/shape"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundgraywhite"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:id="@+id/name"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="昵称"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:textColor="#ff74654a"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="20dp"
            android:layout_weight="5"
            android:textSize="20sp"
            android:background="@drawable/roundgraywhite"
            android:layout_marginLeft="10dp"
            android:hint="@string/namedescribe"
            android:textColor="#ff74654a"
            android:id="@+id/Tname"
            />
        </LinearLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundgraywhite"
        android:layout_below="@+id/realName"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/Password">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/password"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#ff74654a"
            android:textStyle="bold" />
        <EditText
            android:inputType="textPassword"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="20dp"
            android:background="@drawable/roundgraywhite"
            android:layout_weight="5"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:hint="@string/pwddescribe"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/Password"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundgraywhite"
        android:orientation="horizontal"
        android:id="@+id/birthday">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:layout_weight="0"
            android:text="@string/birthday"
            android:textSize="20sp"
            android:textColor="#ff74654a"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/datetext"
            android:layout_width="180dp"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/roundblueblue_disable"
            android:textAlignment="center"
            android:hint="@string/datepicker"/>
        <Button
            android:id="@+id/datepicker"
            android:layout_weight="0"
            android:text="选择时间"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/shape"
            />
        <!--<Button
            android:id="@+id/datePickerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择日期"
            android:background="#aaaa0a"
            android:onClick="showDatePickerDialog"/>-->
    </LinearLayout>

    <LinearLayout
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_below="@+id/birthday"
    android:layout_height="60dp"
    android:background="@drawable/roundgraywhite"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:id="@+id/phoneNumber">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingTop="10dp"
        android:layout_weight="0"
        android:text="@string/phoneNumber"
        android:textSize="20sp"
        android:textColor="#ff74654a"
        android:textStyle="bold" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="20sp"
        android:layout_weight="0"
        android:paddingLeft="20dp"
        android:background="@drawable/roundgraywhite"
        android:layout_marginLeft="10dp"
        android:hint="@string/phoneNumberdescribe"

        />
</LinearLayout>


    <LinearLayout
        android:layout_weight="0"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/school"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="130dp"
        android:orientation="horizontal"

        android:id="@+id/button">

        <Button
            android:id="@+id/btnpost"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:text="提交"
            android:textSize="25sp"
            android:textColor="#ffc462c3"
            android:background="@drawable/shape"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="取消"
            android:textSize="20sp"
            android:textColor="#ff74654a"
            android:background="@drawable/shape"
            android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
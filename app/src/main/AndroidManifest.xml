<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.syuct.imm.ui"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SuperActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activity.IndexActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activity.UserDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activity.NewsDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activity.FriendDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
        </activity>
        <activity
            android:name=".activity.AddFriendActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
        </activity>

        <service android:name="com.syuct.imm.core.io.PushService"/>

        <receiver android:name="com.syuct.imm.broadcast.SystemBroad"/>

        <activity
            android:name=".activity.ChattingActivity"
            android:label="@string/title_activity_chatting"
            android:theme="@android:style/Theme.Material.Light.NoActionBar"
            >
        </activity>
    </application>

</manifest>